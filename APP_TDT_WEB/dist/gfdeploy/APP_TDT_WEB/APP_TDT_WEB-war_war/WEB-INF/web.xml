<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>facelets.SKIP_COMMENTS</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/login.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Educador</display-name>
        <web-resource-collection>
            <web-resource-name>Educador</web-resource-name>
            <description/>
            <url-pattern>/faces/Educador/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Educador</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Administrador</display-name>
        <web-resource-collection>
            <web-resource-name>Administrador</web-resource-name>
            <description/>
            <url-pattern>/faces/Administrador/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrador</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/loginError.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Educador</role-name>
    </security-role>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>
    <filter>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
        <init-param>
            <param-name>thresholdSize</param-name>
            <param-value>512000000</param-value>
        </init-param>
        <init-param>
            <param-name>uploadDirectory</param-name>
            <param-value>/Users/marcobaezasalazar/APP_TDT</param-value>
        </init-param>
    </filter>
    <security-role>
        <description/>
        <role-name>Administrador</role-name>
    </security-role>
    <ejb-local-ref>
        <ejb-ref-name>UsuarioFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.tdt.sessionbean.UsuarioFacadeLocal</local>
        <ejb-link>APP_TDT_WEB-ejb.jar#UsuarioFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>EjercicioFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.tdt.sessionbean.EjercicioFacadeLocal</local>
        <ejb-link>APP_TDT_WEB-ejb.jar#EjercicioFacade</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
        <ejb-ref-name>EjercicioFacade1</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.tdt.sessionbean.EjercicioFacadeLocal</local>
        <ejb-link>APP_TDT_WEB-ejb.jar#EjercicioFacade</ejb-link>
    </ejb-local-ref>
</web-app>
